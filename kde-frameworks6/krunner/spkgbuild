# description	: Framework for providing different actions given a string query
# depends	:  glibc kconfig kcoreaddons ki18n kitemmodels
# depends	: qt6-base extra-cmake-modules kdoctools qt6-tools

pkgname=krunner
pkgver=6.13.0
pkgrel=1
source="https://download.kde.org/stable/frameworks/${pkgver%.*}/$pkgname-$pkgver.tar.xz"
optsflags=" -O3 -ffat-lto-objects -flto=auto "

build() {
    cd $pkgname-$pkgver

    cmake -B build \
        -D BUILD_TESTING=OFF \
        -D BUILD_QCH=OFF \
        -Wno-dev
    cmake --build build
}

package() {
    cd $pkgname-$pkgver

    DESTDIR="$pkgdir" cmake --install build
}

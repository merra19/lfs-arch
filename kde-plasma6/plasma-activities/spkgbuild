# description	: Core components for KDE Activities
# depends	:  glibc kconfig kcoreaddons qt6-base boost
# depends	: extra-cmake-modules qt6-declarative qt6-tools

pkgname=plasma-activities
pkgver=6.3.4
pkgrel=1
source="https://download.kde.org/stable/plasma/$pkgver/$pkgname-$pkgver.tar.xz"
optsflags=" -O3 -ffat-lto-objects -flto=auto "

build() {
    cd $pkgname-$pkgver

    cmake -B build \
        -D BUILD_TESTING=OFF \
        -D BUILD_QCH=OFF \
        -Wno-dev
    cmake --build build
}

package() {
    cd $pkgname-$pkgver

    DESTDIR="$pkgdir" cmake --install build
}
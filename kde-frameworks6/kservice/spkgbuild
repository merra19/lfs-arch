# description	: Advanced plugin and service introspection
# depends	:  glibc kconfig kcoreaddons ki18n qt6-base
# depends	: extra-cmake-modules kdoctools qt6-tools

pkgname=kservice
pkgver=6.13.0
pkgrel=1
source="https://download.kde.org/stable/frameworks/${pkgver%.*}/$pkgname-$pkgver.tar.xz"
optsflags=" -O3 -ffat-lto-objects -flto=auto "

build() {
    cd $pkgname-$pkgver

    cmake -B build \
        -D BUILD_TESTING=OFF \
        -D BUILD_QCH=OFF \
        -Wno-dev
    cmake --build build
}

package() {
    cd $pkgname-$pkgver

    DESTDIR="$pkgdir" cmake --install build
}

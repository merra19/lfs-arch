# description	: Framework for managing bookmarks stored in XBEL format
# depends	:  glibc kconfig kcoreaddons kwidgetsaddons
# depends	: qt6-base extra-cmake-modules qt6-tools

pkgname=kbookmarks
pkgver=6.13.0
pkgrel=1
source="https://download.kde.org/stable/frameworks/${pkgver%.*}/$pkgname-$pkgver.tar.xz"
optsflags=" -O3 -ffat-lto-objects -flto=auto "

build() {
    cd $pkgname-$pkgver
    
    cmake -B build \
        -D BUILD_TESTING=OFF \
        -D BUILD_QCH=OFF \
        -Wno-dev
    cmake --build build
}

package() {
    cd $pkgname-$pkgver

    DESTDIR="$pkgdir" cmake --install build
}

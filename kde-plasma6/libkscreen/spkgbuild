# description	: KDE screen management software
# depends	:  glibc libxcb qt6-base qt6-wayland wayland
# depends	: qt6-tools extra-cmake-modules plasma-wayland-protocols

pkgname=libkscreen
pkgver=6.3.4
pkgrel=1
source="https://download.kde.org/stable/plasma/$pkgver/$pkgname-$pkgver.tar.xz"
optsflags=" -O3 -ffat-lto-objects -flto=auto "

build() {
    cd $pkgname-$pkgver

    cmake -B build \
        -D CMAKE_INSTALL_LIBEXECDIR=lib \
        -D BUILD_TESTING=OFF \
        -D BUILD_QCH=OFF \
        -Wno-dev
    cmake --build build
}

package() {
    cd $pkgname-$pkgver

    DESTDIR="$pkgdir" cmake --install build

    rm -r $pkgdir/usr/lib/systemd
}
